<div class="flex h-screen bg-green-100">
   <div class="m-auto">
    <h2>Please Log in</h2><br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-2">
        <%= f.label :email, class:"block text-grey-300 text-sm font-bold mb-1"%>
        <%= f.email_field :email, autofocus: true, class:"shadow appearance-none border rounded w-full h-6 py-2 px-3 bg-gray-50 text-grey-darker leading-tight focus:outline-none focus:shadow-outline", autocomplete: "email" %>
      </div>
      <br>
      <div class="field mb-2">
        <%= f.label :password, class:"block text-grey-300 text-sm font-bold mb-1"%>
        <%= f.password_field :password, class:"shadow appearance-none border rounded w-full h-6 py-2 px-3 bg-gray-50 text-grey-darker leading-tight focus:outline-none focus:shadow-outline", autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field mb-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions mb-2">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div >

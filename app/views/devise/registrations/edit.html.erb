<section class="py-10">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="heading text-center text-2xl m-5 text-gray-900 font-semibold">Edit your profile</div>
      <div class="mx-auto container max-w-2xl md:w-3/4">
        <div class="bg-gray-100 p-4 border-t-2  bg-opacity-5 border-green-600 rounded-t">
          <div class="max-w-sm mx-auto md:w-full md:mx-0">
            <div class="inline-flex items-center space-x-4">
              <h1 class="text-gray-900"><%= resource_name.to_s.humanize %></h1>
            </div>
          </div>
        </div>
        <div class="md:inline-flex space-y-4 md:space-y-0 w-full p-4 text-gray-900 items-center font-semibold">
          <h2 class="md:w-1/3 max-w-sm mx-auto">Account</h2>
          <div class="md:w-2/3 max-w-sm mx-auto">
            <%= f.label :email, class:"text-sm text-gray-400" %>
            <div class="w-full inline-flex">
              <div class="pt-2 w-1/12 bg-gray-100 bg-opacity-50">
                <svg fill="none" class="w-6 text-gray-400 mx-auto" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"block w-full p-3 rounded-lg focus:outline-none bg-gray-100 hover:bg-gray-200" %>
            </div>
          </div>
        </div>
          <hr />
          <div class="md:inline-flex space-y-4 md:space-y-0  w-full p-4 text-gray-900 items-center font-semibold">
            <h2 class="md:w-1/3 mx-auto max-w-sm">Personal info</h2>
            <div class="md:w-2/3 mx-auto max-w-sm space-y-5">
              <div>
                <h1 class="text-sm text-gray-400">First name</h1>
                <div class="w-full inline-flex">
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class:"block w-full p-3 rounded-lg focus:outline-none bg-gray-100 hover:bg-gray-200" %>
                </div>
              </div>
              <div>
                <h1 class="text-sm text-gray-400">Last name</h1>
                <div class="w-full inline-flex">
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", class:"block w-full p-3 rounded-lg focus:outline-none bg-gray-100 hover:bg-gray-200" %>
                </div>
              </div>
              <div>
                <h1 class="text-sm text-gray-400">Phone Number</h1>
                <div class="w-full inline-flex">
                  <%= f.text_field :phone_number, autofocus: true, autocomplete: "+333 555", class:"block w-full p-3 rounded-lg focus:outline-none bg-gray-100 hover:bg-gray-200" %>
                </div>
              </div>
              <div>
                <h1 class="text-sm text-gray-400">Address</h1>
                <div class="w-full inline-flex">
                  <%= f.text_field :address, autofocus: true, autocomplete: "address", class:" block w-full p-3 rounded-lg focus:outline-none bg-gray-100 hover:bg-gray-200" %>
                </div>
              </div>
            </div>
          </div>
          <hr />
          <hr />
          <div class="md:inline-flex space-y-4 md:space-y-0 w-full p-4 text-gray-900 items-center font-semibold">
            <h2 class="md:w-4/12 max-w-sm mx-auto">Current Password</h2>
            <div class="md:w-2/3 max-w-sm mx-auto">
              <%= f.label :current_password, class:"text-sm text-gray-400" %>
              <div class="w-full inline-flex">
                <div class="pt-2 w-1/12 bg-gray-100 bg-opacity-50">
                  <svg fill="none" class="w-6 text-gray-300 mx-auto" viewBox="0 0 24 24"stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                </div>
                <%= f.password_field :current_password, autocomplete: "current-password", class:"block w-full p-3 rounded-lg focus:outline-none bg-gray-100 hover:bg-gray-200", placeholder:"current password" %>
              </div>
            </div>
          </div>
            <hr />
            <div class="md:inline-flex space-y-4 md:space-y-0 w-full p-4 text-gray-900 items-center font-semibold">
              <h2 class="md:w-4/12 max-w-sm mx-auto">Change password</h2>
              <div class="md:w-2/3 max-w-sm mx-auto">
                <%= f.label :new_password, class:"text-sm text-gray-400" %>
                <div class="w-full inline-flex">
                  <div class="pt-2 w-1/12 bg-gray-100 bg-opacity-50">
                    <svg fill="none" class="w-6 text-gray-300 mx-auto" viewBox="0 0 24 24"stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                  </div>
                  <%= f.password_field :password, autocomplete: "new-password", class:"block w-full p-3 rounded-lg focus:outline-none bg-gray-100 hover:bg-gray-200", placeholder:"new" %>
                    <% if @minimum_password_length %>
                      <br />
                      <em class="font-light ml-2"><%= @minimum_password_length %> characters minimum</em>
                    <% end %>
                </div>
              </div>
            </div>
            <hr/>
            <div class="mt-4 mr-20 flex justify-end">
              <%= f.submit 'Update', class:"py-3 bg-green-500 text-white rounded hover:bg-green-600 w-4/12 font-semibold" do %>
                Update
              <% end %>
            </div>
            <div class="mt-6 pb-2 flex justify-center">
              <%= link_to registration_path(resource_name), data: { confirm: "Confirm your delete action?" }, method: :delete, class:"inline-flex items-center focus:outline-none rounded bg-white border-b" do %>
                <svg fill="none" class="w-4 mr-2" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Delete account
              <% end %>
            </div>
      </div>
    <% end %>
</section>
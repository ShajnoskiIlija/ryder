<div class=" max-h-screen bg-green-300 dark:bg-gray-900">
  <div class= "container edit">
  <h2 class= "px-12 py-2 leading-5 text-gray-900 transition-colors"> Edit <%= resource_name.to_s.humanize %></h2>
    <div class="flex flex-center min-h-screen px-16 mx-96 row-edit ">
          <hr>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field mt-2">
                  <%= f.label :email, class:"block text-grey-300 text-sm font-bold mb-2 " %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"shadow appearance-none border rounded mt-0 mb-4 h-6 py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline" %>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="field mt-1">
                  <%= f.label :password, class:"block text-grey-300 text-sm font-bold " %> <i>(leave blank if you don't want to change it)</i><br />
                  <%= f.password_field :password, autocomplete: "new-password", class:"shadow appearance-none border rounded mb-4 h-6 py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline" %>
                  <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>

                <div class="field mb-1">
                  <%= f.label :password_confirmation, class:"block text-grey-300 text-sm font-bold mb-2" %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"shadow appearance-none border rounded mb-4 h-6 py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline" %>
                </div>

                <div class="field mb-1">
                  <%= f.label :current_password, class:"block text-grey-300 text-sm font-bold mb-2" %> <i>(we need your current password to confirm your changes)</i><br />
                  <%= f.password_field :current_password, autocomplete: "current-password", class:"shadow appearance-none border rounded mb-4 h-6 py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
              <hr>
                <div class="flex item-center actions space-x-10">
                  <%= f.submit "Update", class:"px-4 py-1 mt-4 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600"%>
                  <%= link_to "Back", :back, class:"px-4 py-1 mt-4 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600"%>
                  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,  class:"px-4 py-1 mt-4 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600"%>
                </div>
            <% end %>
    </div>
  </div>
</div>

<div class="flex min-h-screen bg-white">
  <div class="w-1/2 bg-cover md:block hidden" style="background-image: url(<%= asset_path 'cards/jump.jpg'%>)"></div>
  <div class="md:w-1/2 max-w-lg mx-auto my-24 px-4 py-5 shadow-none">
    <div class="text-left p-0 font-sans">
      <h1 class=" text-gray-800 text-3xl font-medium">Create an account for free</h1>
      <h3 class="p-1 text-gray-700">Free forever. No payment needed.</h3>
    </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|  %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mt-5">
          <%= f.text_field :first_name ,class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent", placeholder:'Name', require: true %>
        </div>
        <div class="mt-5">
          <%= f.text_field :last_name, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent", placeholder:"Last Name", require: true %>
        </div>
        <div class="mt-5">
          <%= f.text_field :address, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent ", placeholder:"Address"%>
        </div>
        <div class="mt-5">
          <%= f.telephone_field :phone_number, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent ", placeholder:"Mobile +356 555 654"%>
        </div>
        <div class="mt-5">
          <%= f.email_field :email, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent ", placeholder:"john@doe.com"%>
        </div>
        <div class="mt-5">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent ", placeholder:"New Password"%>
        </div>
        <div class="mt-5">
          <%= password_field :password_confirmation, class:"block w-full p-2 border rounded border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:border-transparent ", placeholder:"Please confirm your password"%>
        </div>
        <div class="mt-10">
          <%= f.submit "Sign up", class:"py-3 bg-green-500 text-white w-full rounded hover:bg-green-600"%>
        </div>
      <% end %>
      <%= link_to 'Already have an account?', new_user_session_path %>
  </div>
</div>
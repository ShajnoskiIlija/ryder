<div class='max-w-full mx-auto md:py-24 px-6'>
  <div class="max-w-sm mx-auto px-6">
    <div class="md:mt-6">
      <div class="text-center font-semibold text-gray-800">
          Change your password
      </div>
      <div class="text-center font-base text-gray-800">
          New password
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <div class="mx-auto max-w-lg ">
          <div class="py-1">
            <span class="px-1 text-sm text-gray-600">
              <%= f.label :email %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text-md block px-3 py-2 rounded-lg w-full hover:bg-gray-200 bg-gray-100 border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none" %>
            </span>
              <%= f.label :password_confirmation, "Confirm new password" %>
          </div>
            <%= f.submit "Change my password", class:'mt-2 p-2 text-sm bg-green-600 hover:bg-green-700 text-white font-semibold text-center rounded w-full'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
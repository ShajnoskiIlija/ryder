<!DOCTYPE html>
<html>
  <head>
    <title>Ryder Dashboard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'  %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- This needs to be fixed in rails way -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
        rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
        rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
    <!-- end of fixing the rails way -->
  </head>
  <body >
    <div class="flex h-full md:flex-row sm:h-full w-full lg:h-screen bg-gray-800 " x-data="{openMenu:1}">
        <!--Start SideBar-->
        <aside class="w-20 relative z-20 flex-shrink-0 px-2 overflow-y-auto bg-green-400">
             <div class="mb-6">
                <!--Start NavItem -->
                <div>
                  <ul class=" mt-6 leading-10 px-4">
                    <li class="mb-3 p-2 rounded-md flex items-center justify-center bg-blue-400 cursor-pointer"
                        @click="openMenu !== 1 ? openMenu = 1 : openMenu = null">
                      <i class="fas fa-align-left fa-sm text-white"></i>
                    </li>
                    <%= link_to root_path  do %>
                      <li class="mb-3 p-2 rounded-md flex items-center justify-center bg-blue-200 cursor-pointer opacity-90">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                        </svg>
                    </li>
                    <% end %>
                      <%= link_to rent_items_path do%>
                        <li class="mb-3 p-2 rounded-md flex items-center justify-center bg-yellow-200 cursor-pointer">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
                          </svg>
                          </li>
                      <% end %>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                    <li class="absolute bottom-0 mb-3 p-2 rounded-full flex items-start px-4 py-2 bg-gray-200 cursor-pointer">
                      <i class="fas fa-power-off fa-sm text-indigo-600"></i>
                    </li>
                    <% end %>
                  </ul>
                </div>
                <!--End NavItem -->
            </div>
        </aside>
        <!-- Start Open Menu -->
        <aside class="animate__animated animate__fadeInLeft w-52 relative z-0 flex-shrink-0  px-4 overflow-y-auto bg-gray-100 sm:block"
               x-show="openMenu ==  1"
               @click.away="openMenu = null"
               style="display: none;">
            <div class="mb-6">
              <!--Start Sidebar for open menu -->
              <div class="grid grid-cols-1 gap-4 mt-6">
                <!-- Start Navitem -->
                <div class="p-2 flex flex-col items-center bg-white rounded-md justify-center shadow-xl cursor-pointer">
                  <div class="rounded-full p-2 bg-indigo-200 flex flex-col items-center">
                    <i class="fas fa-chart-pie fa-sm text-indigo-600"></i>
                  </div>
                  <%= link_to "Dashboard", dashboard_root_path,class:"text-xs mt-1 text-center font-semibold"%>
                </div>
                <!-- End Navitem -->
                <!-- Start Navitem -->
                <div class="p-2 flex flex-col items-center bg-white rounded-md justify-center shadow-xl cursor-pointer">
                  <div class="rounded-full p-2 bg-indigo-200 flex flex-col items-center">
                    <i class="fas fa-wallet fa-sm text-indigo-600"></i>
                  </div>
                  <%= link_to "Account", edit_user_registration_path, class:"text-xs mt-1 text-center font-semibold"%>
                </div>
                <!-- End Navitem -->
                <!-- Start Navitem -->
                <%= link_to new_dashboard_rent_item_path do %>
                <div class="p-2 flex flex-col items-center bg-white rounded-md justify-center shadow-xl cursor-pointer">
                  <div class="rounded-full p-2 bg-indigo-200 flex flex-col items-center">
                    <i class="fas fa-archive fa-sm text-indigo-600"></i>
                  </div>
                  <div class="text-xs mt-1 text-center font-semibold"> New Rent</div>
                </div>
                <% end %>
                <!-- End Navitem -->
                <!-- Start Navitem -->
                <div class="p-2 flex flex-col items-center bg-white rounded-md justify-center shadow-xl cursor-pointer">
                  <div class="rounded-full p-2 bg-indigo-200 flex flex-col items-center">
                    <i class="fas fa-money-bill-wave-alt fa-sm text-indigo-600"></i>
                  </div>
                  <%= link_to "Stop Renting", "#",class:"text-xs mt-1 text-center font-semibold"%>
                </div>
                <!-- End Navitem -->
                 <!-- Start Navitem -->
                 <%= link_to dashboard_rent_items_path do %>
                    <div class="p-2 flex flex-col items-center bg-white rounded-md justify-center shadow-xl cursor-pointer">
                      <div class="rounded-full p-2 bg-indigo-200 flex flex-col items-center">
                        <i class="fas fa-shopping-basket fa-sm text-indigo-600"></i>
                      </div>
                      <div class="text-xs mt-1 text-center font-semibold">My Rents</div>
                    </div>
                <% end %>
                <!-- End Navitem -->
              </div>
              <!--End Sidebar for open menu -->
            </div>
        </aside>
        <!-- End Open Menu -->
        <!-- End Sidebar -->
        <div class="flex flex-col flex-1 w-full overflow-y-auto">
            <!--Start Topbar -->
            <!--End Topbar -->
          <main class="relative z-0 flex-1 pb-8 px-6 bg-gray-700">
              <div class="grid pb-10  mt-4 bg-gray-700 ">
          <%= yield %>
          </div>
          </main>
          </div>
    </div>
  </body>
</html>
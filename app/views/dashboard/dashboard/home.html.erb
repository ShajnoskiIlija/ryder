<div class="mb-2">
  <p class="text-lg font-semibold text-gray-100"><%= t('.status')%></p>
</div>
<div class="grid grid-cols-12 gap-6 border-b-2 pb-5">
  <div class="col-span-12 sm:col-span-12 md:col-span-8 lg:col-span-8 xxl:col-span-8">
    <div class="grid grid-cols-1 gap-2 sm:grid-cols-2 md:grid-cols-5 space-x-5 lg:grid-cols-5 xl:grid-cols-5 mt-3">
        <div class="p-4">
          <p class="text-xl font-bold text-gray-100"><%= t('.current_number')%></p>
            <%= link_to @count_rent, dashboard_rent_items_path, class:"text-xl font-semibold filter drop-shadow text-gray-100"%>
          <p class="text-xs font-semibold text-gray-100"><%= t('.items_for_rent')%></p>
        </div>
        <div class="p-4">
          <%= link_to '#' do %>
            <p class="text-xl font-bold text-gray-100"><%= t('.bicycles')%>:</p>
            <span class="text-xl font-semibold filter drop-shadow text-gray-100"><%= @rented_type.count('Bicycle')%> </span>
          <% end %>
            <p class="text-xs font-semibold text-gray-100"><%= t('.items')%></p>
        </div>
        <div class="p-4">
          <p class="text-xl font-bold text-gray-100"><%= t('.electric_scooter')%></p>
            <%= link_to @rented_type.count('Electric Scooter'), '#', class:"text-xl font-semibold filter drop-shadow text-gray-100"%>
          <p class="text-xs font-semibold text-gray-100"><%= t('.items')%></p>
        </div>
        <div class="p-4">
          <p class="text-xl font-bold text-gray-100"><%= t('.summer_equipment')%> </p>
            <%= link_to @rented_type.count('Summer Equipment'), '#', class:"text-xl font-semibold filter drop-shadow text-gray-100"%>
          <p class="text-xs font-semibold text-gray-100"><%= t('.items')%></p>
        </div>
          <div class="p-4">
            <p class="text-xl font-bold text-gray-100"><%= t('.winter_equipment')%> </p>
              <%= link_to @rented_type.count('Winter Equipment'), '#', class:"text-xl font-semibold filter drop-shadow text-gray-100"%>
            <p class="text-xs font-semibold text-gray-100"><%= t('.items')%></p>
        </div>
    </div>
  </div>
</div>

<div class="h-screen md:grid md:items-center px-8 md:px-80 ">
  <%= form_with model: [:dashboard, @rent_item] do |f|%>
    <section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
        <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">New Rent Item</h2>

        <form>
            <div class="grid grid-cols-1 gap-6 mt-4  lg:grid-cols-2">
                <div>
                    <%= f.label :item_type, class:"text-gray-700 dark:text-gray-200" %>
                    <%= f.select :item_type, ITEM_TYPES, class:"block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring" %>
                </div>

                <div>
                    <%= f.label :condition, class:"text-gray-700 dark:text-gray-200" %>
                    <%= f.select :condition, CONDITIONS, class:"block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring" %>
                </div>

               <div>
                    <%= f.label :location, class:"text-gray-700 dark:text-gray-200" %>
                    <%= f.text_field :location, id:"location", type:"text", class:"block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring" %>
                </div>

                <div>
                    <%= f.label :for_age, class:"text-gray-700 dark:text-gray-200" %>
                    <%= f.select :for_age, FOR_AGES, class:"block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring" %>
                </div>
            </div>
            <div class= "flex flex-row mt-4">
                    <%= f.label "Active/Sleep", class:"text-gray-700 dark:text-gray-200" %>
                    <%= f.check_box :available, class:"block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring" %>
                </div>

            <div class="flex items-center mt-12 ">
                <button >
                    <%= f.submit class:"px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600" %>
                    <%= button_to "Cancel" , dashboard_root_path, class:"px-6 m-2 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600"%>
                </button>
            </div>
        </form>
    </section>
  <% end %>
</div>
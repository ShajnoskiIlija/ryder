<% if flash[:notice] %>
 <div class="notice flex justify-center bg-green-500"><%= flash[:notice] %></div>
<% end %>
<div class="flex flex-col items-center">
    <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 pl-2 pr-2 py-6">
        <% @rent_requests.each do |rent_request| %>
            <div class="flex max-w-sm mx-5 mt-8 overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800 sm:text-center">
                <img class="object-cover hidden sm:block object-center w-1/2 h-56" src="https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80" alt="avatar">
                <div class=" px-6 py-4">
                    <p class="text-xl font-semibold text-gray-800 dark:text-white">
                        <%= link_to  rent_request.rent_item.item_type, dashboard_rent_items_path%>
                    </p>
                    <p>Current Status</p>
                    <%=rent_request.status.capitalize%>
                    <p class="py-2 text-gray-700 border-t-2 dark:text-gray-400">Requesting:</p>
                    <%=link_to rent_request.user.first_name, '#'%> <%=link_to rent_request.user.last_name, "#"%>
                        <%=link_to "View Pictures", '#', class:'md:hidden lg:hidden py-1 text-sm underline'%>
                    <div class="flex items-center object-contain md:object-scale-down mt-4 text-gray-700 dark:text-gray-200">
                        <p>Phone:</p>
                        <h1 class="px-2 text-sm"><%=link_to rent_request.user.phone_number, "#"%></h1>
                    </div>

                    <div class="flex items-center md:place-items-center mt-4 text-gray-700 dark:text-gray-200">
                        <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M16.2721 10.2721C16.2721 12.4813 14.4813 14.2721 12.2721 14.2721C10.063 14.2721 8.27214 12.4813 8.27214 10.2721C8.27214 8.063 10.063 6.27214 12.2721 6.27214C14.4813 6.27214 16.2721 8.063 16.2721 10.2721ZM14.2721 10.2721C14.2721 11.3767 13.3767 12.2721 12.2721 12.2721C11.1676 12.2721 10.2721 11.3767 10.2721 10.2721C10.2721 9.16757 11.1676 8.27214 12.2721 8.27214C13.3767 8.27214 14.2721 9.16757 14.2721 10.2721Z"/><path fill-rule="evenodd" clip-rule="evenodd" d="M5.79417 16.5183C2.19424 13.0909 2.05438 7.3941 5.48178 3.79418C8.90918 0.194258 14.6059 0.0543983 18.2059 3.48179C21.8058 6.90919 21.9457 12.606 18.5183 16.2059L12.3124 22.7241L5.79417 16.5183ZM17.0698 14.8268L12.243 19.8965L7.17324 15.0698C4.3733 12.404 4.26452 7.9732 6.93028 5.17326C9.59603 2.37332 14.0268 2.26454 16.8268 4.93029C19.6267 7.59604 19.7355 12.0269 17.0698 14.8268Z"/>
                        </svg>

                        <h1 class="px-2 text-sm">
                            <p>From:</p>
                            <%= link_to rent_request.user.address, '#', class:"underline"%>
                        </h1>
                    </div>
                    <div>

                    <%= form_with model: rent_request, url: dashboard_rent_request_path(rent_request), method: :put do |f| %>
                      <p class= 'mt-4 text-xl text-green-500 dark:text-white'> Select Status</p>
                      <%= f.select :status, options_for_select([['Accept', 'accepted'], ['Reject', 'rejected']]), { prompt: 'Select' } %>
                      <%= f.submit 'Update Status', class: 'px-6 m-2 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600' %>
                    <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>